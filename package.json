{
  "name": "@metreeca/core",
  "version": "0.9.17",
  "description": "Essential TypeScript abstractions.",
  "keywords": [
    "typescript",
    "utilities"
  ],
  "homepage": "https://metreeca.github.io/core/",
  "bugs": {
    "url": "https://github.com/metreeca/core/issues",
    "email": "info@metreeca.com"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Metreeca",
    "email": "info@metreeca.com",
    "url": "https://www.metreeca.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metreeca/core.git"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./json": "./dist/basic/json.js",
    "./nested": "./dist/basic/nested.js",
    "./report": "./dist/basic/report.js",
    "./resource": "./dist/network/resource.js",
    "./language": "./dist/network/language.js",
    "./async": "./dist/async/index.js",
    "./order": "./dist/functional/order.js",
    "./relay": "./dist/functional/relay.js",
    "./state": "./dist/functional/state.js"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist docs node_modules",
    "setup": "npm install && npm audit fix",
    "build": "rm -rf dist docs && tsc -p tsconfig.build.json && typedoc",
    "check": "npx vitest --typecheck run",
    "watch": "npx tsc --watch",
    "proof": "npx typedoc && (npx typedoc --watch & npx five-server docs --open)"
  },
  "devDependencies": {
    "five-server": "^0.4.5",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
